{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [
            1,
            4
        ],
        "no-alert": "off",
        "no-plusplus": "off",
        "no-continue": "off",
        "no-console": "off",
        "no-eval": "off",
        "no-undef": "warn",
        "no-restricted-globals": "off",
        "no-unused-vars": "off"
    }
}